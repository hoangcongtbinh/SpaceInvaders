<VBox alignment="CENTER" prefHeight="600" prefWidth="360" spacing="20.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="uet.oop.space_invaders.spaceinvaders.MultiplayerGameController">
   <children>
      <Pane fx:id="game" prefHeight="600.0" prefWidth="360.0">
         <children>
            <Canvas fx:id="canvas" focusTraversable="true" height="600.0" onKeyPressed="#onKeyPressed" onKeyReleased="#onKeyReleased" width="360.0" />
            <Label fx:id="information" layoutX="93.0" layoutY="14.0" text="Score: %d" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>
            <ImageView fx:id="heart1" fitHeight="17.0" fitWidth="17.0" layoutX="290.0" layoutY="18.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@../../../../heart.png" />
            </image>
            </ImageView>
            <ImageView fx:id="heart2" fitHeight="17.0" fitWidth="17.0" layoutX="309.0" layoutY="18.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../../heart.png" />
               </image>
            </ImageView>
            <ImageView fx:id="heart3" fitHeight="17.0" fitWidth="17.0" layoutX="328.0" layoutY="18.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../../heart.png" />
               </image>
            </ImageView>
            <Label fx:id="autoPlay" alignment="CENTER" contentDisplay="CENTER" layoutX="188.0" layoutY="14.0" prefHeight="25.0" prefWidth="80.0" style="-fx-background-color: linear-gradient(to bottom right, #0070C0, #7030A0, #163E64); -fx-background-radius: 20;" text="AI Player" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Label>
            <Label fx:id="notification" alignment="CENTER" contentDisplay="CENTER" layoutX="93.0" layoutY="74.0" prefHeight="25.0" prefWidth="175.0" style="-fx-background-color: lightgreen; -fx-background-radius: 20;" text="Notification goes here." textAlignment="CENTER" />
            <ImageView fx:id="heart11" fitHeight="17.0" fitWidth="17.0" layoutX="14.0" layoutY="18.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../../heart.png" />
               </image>
            </ImageView>
            <ImageView fx:id="heart21" fitHeight="17.0" fitWidth="17.0" layoutX="33.0" layoutY="18.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../../heart.png" />
               </image>
            </ImageView>
            <ImageView fx:id="heart31" fitHeight="17.0" fitWidth="17.0" layoutX="52.0" layoutY="18.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../../heart.png" />
               </image>
            </ImageView>
         </children>
      </Pane>
   </children>
</VBox>
