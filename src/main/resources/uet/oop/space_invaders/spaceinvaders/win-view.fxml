<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="600" prefWidth="360" spacing="20.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="uet.oop.space_invaders.spaceinvaders.SpaceShooter">
   <children>
      <Pane prefHeight="600.0" prefWidth="360.0">
         <children>
             <Button defaultButton="true" layoutX="108.0" layoutY="304.0" onAction="#startGame" prefHeight="35.0" prefWidth="145.0" style="-fx-background-color: orange; -fx-border-radius: 20; -fx-border-width: 1; -fx-background-radius: 20;" text="Try Again" textAlignment="CENTER">
                 <font>
                     <Font name="System Bold" size="15.0" />
                 </font>
             </Button>
             <Button layoutX="108.0" layoutY="356.0" onAction="#mainMenu" prefHeight="35.0" prefWidth="145.0" style="-fx-background-color: white; -fx-border-color: white; -fx-border-radius: 20; -fx-border-width: 1; -fx-background-radius: 20" text="Main Menu" textAlignment="CENTER">
                 <font>
                     <Font name="System Bold" size="15.0" />
                 </font></Button>
             <Button cancelButton="true" layoutX="108.0" layoutY="408.0" onAction="#quit" prefHeight="35.0" prefWidth="145.0" style="-fx-background-color: red; -fx-border-color: red; -fx-border-radius: 20; -fx-border-width: 1; -fx-background-radius: 20;" text="Exit Game" textAlignment="CENTER" textFill="WHITE">
                 <font>
                     <Font name="System Bold" size="15.0" />
                 </font></Button>
            <Label alignment="CENTER" layoutY="109.0" prefHeight="46.0" prefWidth="360.0" text="CONGRATULATIONS">
               <font>
                  <Font name="System Bold" size="31.0" />
               </font>
               <textFill>
                  <LinearGradient endX="1.0" endY="1.0">
                     <stops>
                        <Stop>
                           <color>
                              <Color red="0.09000000357627869" green="1.0" blue="0.1775083988904953" />
                           </color>
                        </Stop>
                        <Stop offset="1.0">
                           <color>
                              <Color red="0.4444444477558136" green="0.7314814925193787" blue="1.0" />
                           </color>
                        </Stop>
                     </stops>
                  </LinearGradient>
               </textFill>
            </Label>
            <Label fx:id="scoreLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="-1.0" layoutY="171.0" prefHeight="27.0" prefWidth="360.0" text="Score: %d" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>

         </children>
      </Pane>
   </children>
</VBox>
